generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id          Int   @id @default(autoincrement())
  firebaseId  String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]
} 

model Post {
  id          Int @id @default(autoincrement())
  user        User @relation(fields: [userId], references: [id])
  userId      Int

  @@index(userId)
}