generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id              Int        @id @default(autoincrement())
  name            String
  email           String     @unique
  password_digest String
  created_at      DateTime   @default(now())
  categories      Category[]

  @@map("users")
}

model Category {
  id                 Int                 @id @default(autoincrement())
  name               String
  color              String
  goal               Int?
  user               User                @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id            Int
  oneOffTransactions OneOffTransaction[]
  fixedTransactions  FixedTransaction[]

  @@map("categories")
}

model OneOffTransaction {
  id          Int      @id @default(autoincrement())
  name        String
  value       Int // Cents
  date        DateTime
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id Int

  @@map("one_off_transactions")
}

model FixedTransaction {
  id         Int       @id @default(autoincrement())
  name       String
  value      Int
  start_date DateTime // Represents the first day when the transaction happened.
  end_date   DateTime? // Represents the first day of the first month after the transaction stopped.

  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id Int

  @@map("fixed_transactions")
}
